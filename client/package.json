{
  "name": "tagcon",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "node-sass": "^4.14.1",
    "numeral": "^2.0.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-player": "^2.1.1",
    "react-redux": "^7.2.0",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3"
  },
  "scripts": {
    "lint": "run-s lint:**",
    "lint:js": "npx eslint .",
    "lint:styles": "npx stylelint src/**/*.scss",
    "start": "run-p start:**",
    "start:client": "react-scripts start",
    "start:mock-server": "npx nodemon mock-api",
    "build": "run-s lint test && react-scripts build",
    "container": "run-s container:build container:start",
    "container:build": "run-s lint test && docker build . -t tagcon-client-container",
    "container:start": "docker run -p 3000:3000 tagcon-client-container",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "babel-eslint": "^10.1.0",
    "connect-api-mocker": "^1.9.0",
    "cors": "^2.8.5",
    "eslint": "^6.6.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-react": "^7.20.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "redux-devtools": "^3.5.0",
    "stylelint": "^13.5.0",
    "stylelint-config-sass-guidelines": "^7.0.0"
  }
}
